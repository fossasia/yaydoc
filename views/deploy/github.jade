extends ../layout

block content
  script(src="/socket.io/socket.io.js")
  script.
    var data = {
      'email': "#{email}",
      'gitURL': "#{gitURL}",
      'uniqueId': "#{uniqueId}",
      'encryptedToken': "#{token}",
      'username': "#{username}"
    };
  script(src="/scripts/socket-github.js")
  .container
    .col-md-6.col-md-offset-3#main-content
      .progress
        .progress-bar#progress(role='progressbar', aria-valuenow='0', aria-valuemin='0', aria-valuemax='100', style='width:0%')
          span.sr-only
      .logs.pre-scrollable
        h4.console-output-header Console Output
        ul#messages
      .row.btnLogsDiv
        a.btn.btn-default#btnGithubPages(target="_blank") Github Pages
        a.btn.btn-default#btnLogs Detailed Logs
  .modal.fade#detailed-logs-modal(role='dialog')
    .modal-dialog
      .modal-content
        .modal-header
          button.close(type='button', data-dismiss='modal') Ã—
          h5.modal-title Detailed Logs
        .modal-body
          pre#detailed-logs.pre-scrollable
        .modal-footer
          button.btn.btn-default#copy-button(data-clipboard-action='copy' data-clipboard-target='#detailed-logs' style='float: left') Copy to Clipboard
          a#downloadDetailedLogs.btn.btn-default Download
